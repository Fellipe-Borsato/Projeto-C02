{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Projeto (C++)",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "-o",
                "main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
